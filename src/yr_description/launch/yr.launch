<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <arg name="model" default="exo" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="x_pos" default="0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="1.2"/>
  <arg name="debug" default="true"/>

  <!-- <node name="set_model_path" pkg="yr_description" type="set_model_path.py" output="screen" /> -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
   <!-- <arg name="world_name" value="$(find yr_description)/worlds/exo_world_final_v3.world"/> -->
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find yr_description)/urdf/exo.xacro debug:=$(arg debug)" />
  
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model exo -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
    <param name="publish_frequency" value="50.0" />
  </node>
  
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/exo" args="joint_state_controller" />
  <include file="$(find yr_description)/launch/angle_controller.launch" />
  <include file="$(find yr_description)/launch/torque_controller.launch" />
  <node name="set_initial_joint_states" pkg="yr_description" type="set_initial_joint_states.py" output="screen" />
  <node name="forward_kinematics" pkg="yr_description" type="forward_kinematics.py" output="screen" />
  <node name="inverse_kinematics" pkg="yr_description" type="inverse_kinematics.py" output="screen" />
  <node name="compute_jacbobian" pkg="yr_description" type="compute_jacobian.py" output="screen" />

  
  <!-- <include file="$(find yr_description)/launch/trajectory_controller.launch" /> -->
</launch>
